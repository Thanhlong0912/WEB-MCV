@{
    ViewBag.Title = "Đăng Nhập";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@model DoAnWeb.Models.User

@using (Html.BeginForm("DangNhap", "TaiKhoan", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Đăng nhập tài khoản</h4>
    <hr />
    <div class="form-group">
        <label class="col-md-2 control-label">Tên Đăng Nhập</label>
        <div class="col-md-6">
            @Html.TextBoxFor(model => model.TenDangNhap, new { @class = "form-control" })
        </div>
        @Html.ValidationMessageFor(model => model.TenDangNhap, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">Mật Khẩu</label>
        <div class="col-md-6">
            @Html.PasswordFor(model => model.MatKhau, new { @class = "form-control" })<br />
            <p style="color:red;">@ViewBag.LoiDangNhap</p>
        </div>
        @Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <div class="col-md-offset-4 col-md-6">
            <input type="submit" width="40" class="btn btn-default" value="ĐĂNG NHẬP" />
        </div>
    </div>
}