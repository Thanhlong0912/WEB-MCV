
@{
    ViewBag.Title = "Thêm Sản Phẩm";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    input[type=text] {
        width: 100%;
        height: 40px;
        background: black;
        color:white;
        padding: 12px 20px;
        margin: 8px 0;
        display: inline-block;
        border: 1px solid #ff0000;
        border-radius: 4px;
        box-sizing: border-box;
    }

    input[type=number] {
        width: 100%;
        height: 40px;
        background: black;
        color:white;
        padding: 12px 20px;
        margin: 8px 0;
        display: inline-block;
        border: 1px solid #ff0000;
        border-radius: 4px;
        box-sizing: border-box;
    }

    input[type=submit] {
        width: 100%;
        background-color: #2a9fd6;
        color: black;
        padding: 14px 20px;
        margin: 8px 0;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

        input[type=submit]:hover {
            background-color: #45a049;
        }
</style>
@using (Html.BeginForm("Them", "SanPhamAdmin", FormMethod.Post, new { enctype = "multipart/form-data" }))//dùng enctype = "multipart/form-data" để thêm hình ảnh
{
    <table style="width:80% ;margin:auto; background:black;">
        <tr>
            <td style="color:white;padding-left:5px;">Mã Sản Phẩm</td>
            <td> <input style="width: 300px;float:left; " maxlength="11" type="text" name="MaSP" required /></td>
        </tr>
        <tr>
            <td style ="color:white;padding-left:5px;">Tên Sản Phẩm</td>
            <td> <input style="width: 300px;float:left;" type="text" name="TenSP" maxlength="11" required /></td>
        </tr>
        <tr>
            <td style="color:white;padding-left:5px;">Giá Bán</td>
            <td> <input style="width: 300px; float:left;" type="number" name="GiaBan" required /></td>
        </tr>
        <tr>
            <td style="color:white;padding-left:5px;">Giá Cũ</td>
            <td> <input style="width: 300px; float:left;" type="number" name="GiaCu" required /></td>
        </tr>
        <tr>
            <td style="color:white;padding-left:5px;">Mô Tả</td>
            <td> <input style="width: 300px;float:left;" type="text" name="MoTa" required /></td>
        </tr>
        <tr>
            <td style="color:white;padding-left:5px;">
                <br />Loại Sản Phẩm</td>
            <td>
                <br />
                @Html.DropDownList("MaLoai", null, new { @style = "float:left; width: 300px; background:black;color:white; height:30px;" })
            </td>
        </tr>
        <tr>
            <td style="color:white;padding-left:5px;"><br />Hình Ảnh</td>
            <td><br /><input style="float:left;" type="file" name="HinhAnh" accept="image/*" required /></td>
        </tr>
        <tr>
            <td colspan="3">
                <br />
                <input style="height: 40px; width: 300px;margin-left:32%;background:#016ABC;color: #fff;
                            border: 1px solid #eee;border-radius: 20px;box-shadow: 5px 5px 5px #eee;"
                       type="submit" name="btn_ThemSanPham" value="Hoàn Tất Thêm Sản Phẩm" />
            </td>
        </tr>
    </table>
}