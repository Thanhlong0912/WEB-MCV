@model DoAnWeb.Models.SANPHAM
@{
    ViewBag.Title = "Xóa Sản Phẩm";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    input[type=text] {
        width: 100%;
        height: 40px;
        background: black;
        padding: 12px 20px;
        margin: 8px 0;
        display: inline-block;
        border: 1px solid #ff0000;
        border-radius: 4px;
        box-sizing: border-box;
    }

    input[type=number] {
        width: 100%;
        height: 40px;
        background: black;
        padding: 12px 20px;
        margin: 8px 0;
        display: inline-block;
        border: 1px solid #ff0000;
        border-radius: 4px;
        box-sizing: border-box;
    }

    input[type=submit] {
        width: 100%;
        background-color: #2a9fd6;
        color: black;
        padding: 14px 20px;
        margin: 8px 0;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

        input[type=submit]:hover {
            background-color: #45a049;
        }
</style>
@using (Html.BeginForm("Xoa", "SanPhamAdmin", FormMethod.Post))
{
    <table style="width:80% ;margin:auto; background:black;">
        <tr>
            <td>Mã Sản Phẩm</td>
            <td> <input style="width: 300px;float:left; " maxlength="11" type="text" name="MaSP" required readonly value="@Model.MaSP" /></td>
        </tr>
        <tr>
            <td>Tên Sản Phẩm</td>
            <td> <input style="width: 300px;float:left;" type="text" maxlength="11" required readonly value="@Model.TenSP" /></td>
        </tr>
        <tr>
            <td>Giá Bán</td>
            <td> <input style="width: 300px; float:left;" type="number" required readonly value="@Model.GiaBan" /></td>
        </tr>
        <tr>
            <td>Hình Ảnh</td>
            <td> <img src="~/Images/sanpham/@Model.HinhAnh" style="width:50px;height:70px;" /></td>
        </tr>
        <tr>
            <td colspan="3">
                <input style="height: 40px; width: 300px;   margin-left:32%;
	                    background:#016ABC;color: #fff;border: 1px solid #eee;border-radius: 20px;box-shadow: 5px 5px 5px #eee;"
                       type="submit" name="btn_XoaSanPham" value="Xác nhận Xóa" />
            </td>
        </tr>
    </table>
}
