@model DoAnWeb.Models.LOAISANPHAM
@{
    ViewBag.Title = "Sửa Loại Sản Phẩm";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    input[type=text] {
        width: 100%;
        padding: 12px 20px;
        margin: 8px 0;
        display: inline-block;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
    }

    input[type=submit] {
        width: 100%;
        background-color: #2a9fd6;
        color: white;
        padding: 14px 20px;
        margin: 8px 0;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

        input[type=submit]:hover {
            background-color: #45a049;
        }
</style>
<div style="margin:auto;">
    @using (Html.BeginForm("Sua", "LoaiSanPhamAdmin", FormMethod.Post, new { @style = "width : 50%; margin: auto;" }))
    {
        <label for="fname">Mã Loại Sản Phẩm</label>
        <input type="text" id="fname" name="MaLoai" style="background-color:#5d5e63;color:white;" placeholder="Mã Loại Sản Phẩm.." required value="@Model.MaLoai" readonly>

        <label for="lname">Tên Loại Sản Phẩm</label>
        <input type="text" id="lname" name="TenLoaiSP" style="background-color:#5d5e63;color:white;" placeholder="Tên Loại Sản Phẩm.." required value="@Model.TenLoaiSP">

        <input type="submit" value="Xác nhận chỉnh sửa">
    }
</div>
